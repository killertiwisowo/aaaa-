create table examen
( 
    alumno text;
    grado   int;
    grupo   text;
    promedio int;
);
   INSERT INTO examen (alumno,grado,grupo,promedio) VALUES('juan',2,'A',9);
   INSERT INTO examen (alumno,grado,grupo,promedio) VALUES('pedro',3,'B',10);
   INSERT INTO examen (alumno,grado,grupo,promedio) VALUES('alicia',2,'C',7);
   INSERT INTO examen (alumno,grado,grupo,promedio) VALUES('esmeralda',1,'A',9);
   
   
   UPDATE examen SET promedio=9
   WHERE alumno='alicia';
   
   DELETE FROM examen WHERE alumno = 'pedro';
